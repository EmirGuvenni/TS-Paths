{
  "name": "tspaths",
  "version": "0.1.2",
  "description": "Replace absolute paths to relative paths after typescript compilation",
  "main": "cjs/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "tspaths": "cjs/index.js",
    "tsp": "cjs/index.js"
  },
  "scripts": {
    "build": "yarn build:esm && yarn build:cjs",
    "build:esm": "tsc -p ./tsconfig.esm.json",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "format": "prettier --write \"./*.{js,jsx,ts,tsx}\" \"./src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "tslint -c ./tslint.json \"src/**/*\"",
    "lint:fix": "tslint --fix -c ./tslint.json \"src/**/*\"",
    "start": "yarn clear && yarn format && yarn lint:fix && yarn test && yarn build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EmirGuvenni/tscpaths.git"
  },
  "keywords": [
    "typescript",
    "paths",
    "alias",
    "absolute path",
    "relative path",
    "compilation",
    "tsc"
  ],
  "author": "Emir GÃ¼venni <contact@emirguvenni.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EmirGuvenni/tscpaths/issues"
  },
  "homepage": "https://github.com/EmirGuvenni/tscpaths",
  "devDependencies": {
    "@types/node": "^17.0.24",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "fast-glob": "^3.2.11"
  }
}
